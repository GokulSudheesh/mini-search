<%- include("partials/header") -%>
    <form action="/search" method="GET" role="search">
        <a id="go-home" type="button" href="/"><i class="fas fa-home"></i></a>
        <input oninput="getKeywords(this)" id="result-search-bar" type="search" name="q" value="<%= query %>" required="true" autocomplete="off">
        <!-- <button class="home-icon" type="submit"><i style="color: #ffffff;" class="fa fa-search"></i></button> -->
        <a class="home-icon" type="button" href="/upload"><i style="color: #ffffff;" class="fas fa-upload"></i></a>
    </form>
    <div id="result-keyword-list" hidden="true">
        <!-- <p class="keyword-item" onclick="itemClick(this)">Test 1</p>
        <p class="keyword-item" onclick="itemClick(this)">Test 2</p> -->
    </div>
    <% if(!articles.length) { %>
        <p>No results found.</p>
    <% } %>
    <% articles.forEach(article => { %>
        <div class="searchresult">
            <a class="heading" href=<%= `/view/${article._id}` %>><%= article.filename %></a>
            <a href=<%= `/download/${article._id}` %>>Download</a>
            <p><%= article.description.slice(0, 255) + "..." %></p>
        </div>
    <% }) %>
<script src="/js/keywordList.js"></script>
<%- include("partials/footer") -%>